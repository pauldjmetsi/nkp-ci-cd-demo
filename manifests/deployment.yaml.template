apiVersion: apps/v1
kind: Deployment
metadata:
  name: nkp-demo-app
  labels:
    app: nkp-demo
spec:
  replicas: 1
  selector:
    matchLabels:
      app: nkp-demo
  template:
    metadata:
      labels:
        app: nkp-demo
    spec:
      containers:
        - name: nkp-demo
          image: ghcr.io/pauldjmetsi/nkp-ci-cd-demo:__BUILD_VERSION__
          ports:
            - containerPort: 8080
          env:
            - name: APP_VERSION
              value: "__APP_VERSION__"
            - name: BUILD_VERSION
              value: "__BUILD_VERSION__"

---

apiVersion: v1
kind: Service
metadata:
  name: nkp-demo-service
spec:
  type: LoadBalancer
  selector:
    app: nkp-demo
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8080
